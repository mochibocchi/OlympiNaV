<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".MainActivity"
    tools:openDrawer="start">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@color/main_colour"
            android:elevation="4dp"
            android:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Scan QR Code"
                android:textColor="@color/main_colour"
                android:textStyle="bold"
                android:layout_gravity="center|top"
                android:textSize="@dimen/main_heading_size"
                android:paddingTop="@dimen/main_heading_padding_top"/>

            <ImageView
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:background="@android:color/transparent"
                app:srcCompat="@drawable/baseline_qr_code_scanner_24"
                android:layout_marginBottom="50dp"
                android:layout_gravity="center"
                android:contentDescription="Scan QR Code icon"/>

            <EditText
                android:id="@+id/editTextNumber"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="100dp"
                android:layout_width="300dp"

                android:inputType="number"
                android:hint="Enter ticket number"
                android:textColor="@color/main_colour"
                android:gravity="center"
            />

            <Button
                android:id="@+id/addTicketButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:layout_marginBottom="50dp"
                android:text="Add ticket ID number" />
        </FrameLayout>
    </LinearLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header"
        app:itemIconTint="@color/main_colour"
        app:itemTextColor="@color/main_colour"
        app:menu="@menu/nav_menu" />
</androidx.drawerlayout.widget.DrawerLayout>