<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal">


    <!-- Your Feedback is important to us. -->
    <TextView
        android:id="@+id/feedback"
        android:layout_width="370dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:text="Your Feedback is important to us."
        android:textAlignment="center"
        android:textColor="#232323"
        android:textSize="24sp"
        android:textStyle="bold" />

    <!-- Your overall satisfaction of this mobile app: -->
    <TextView
        android:id="@+id/satisfactionLabel"
        android:layout_width="wrap_content"
        android:layout_height="52dp"
        android:layout_gravity="center"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="16dp"
        android:alpha="0.56"
        android:gravity="center"
        android:text="Your overall satisfaction of this mobile app:"
        android:textAlignment="center"
        android:textColor="#232323"
        android:textSize="18sp" />

    <!-- RatingBar centered -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <RatingBar
            android:id="@+id/ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:stepSize="1" />
    </LinearLayout>

    <!-- RadioGroup for feedback type -->
    <!-- RadioGroup for feedback type -->
    <TextView
        android:id="@+id/textFeedbackType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Pick a Subject to provide additional feedback:"
        android:textSize="18sp"
        android:textColor="#232323"
        android:gravity="center"
        android:textAlignment="center" />

    <RadioGroup
        android:id="@+id/feedbackTypeRadioGroup"
        android:layout_width="146dp"
        android:layout_height="158dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/radioBug"
            android:layout_width="146dp"
            android:layout_height="wrap_content"
            android:text="Bug"
            android:textColor="#232323"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/radioSuggestion"
            android:layout_width="146dp"
            android:layout_height="wrap_content"
            android:text="Suggestion"
            android:textColor="#232323"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/radioComplaint"
            android:layout_width="146dp"
            android:layout_height="wrap_content"
            android:text="Complaint"
            android:textColor="#232323"
            android:textSize="16sp" />
    </RadioGroup>

    <!-- Would you like to add a comment? -->
    <TextView
        android:id="@+id/commentLabel"
        android:layout_width="294dp"
        android:layout_height="75dp"
        android:layout_gravity="center"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="16dp"
        android:alpha="0.56"
        android:gravity="center"
        android:text="Would you like to add a comment?"
        android:textAlignment="center"
        android:textColor="#232323"
        android:textSize="18sp"
        android:textStyle="bold" />

    <!-- TextBox for comments -->
    <EditText
        android:id="@+id/edtComments"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:textSize="16sp"
        android:hint="Type your comments here..."
        android:gravity="center"
        android:textAlignment="center" />

    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="113dp"
        android:layout_height="65dp"
        android:layout_marginTop="16dp"
        android:text="Submit" />
</LinearLayout>
